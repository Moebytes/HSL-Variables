{
    "compilerOptions": {
        "outDir": "dist",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "target": "es6",
        "module": "es6",
        "lib": ["es2019", "dom"],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@figma"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}